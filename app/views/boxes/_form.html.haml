= form_for @box do |f|
  = f.label :name
  = f.text_field :name
  = f.label :description
  = f.text_area :description
  = f.label :ship_date
  = f.date_select :ship_date, :order => [:day, :month, :year]
  = f.label :frequency
  = f.select :frequency, [['weekly', 'Weekly'], ['biweekly', 'Biweekly'], ['monthly', 'Monthly']]
  = f.label :price
  = f.submit